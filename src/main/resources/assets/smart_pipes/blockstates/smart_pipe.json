{
  "multipart": [
    {
      "apply": {
        "model": "smart_pipes:block/item_pipe"
      }
    },
    {
      "when": {
        "down": "true"
      },
      "apply": {
        "model": "smart_pipes:block/item_pipe_connection",
        "x": 90
      }
    },
    {
      "when": {
        "up": "true"
      },
      "apply": {
        "model": "smart_pipes:block/item_pipe_connection",
        "x": 270
      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "smart_pipes:block/item_pipe_connection",
        "y": 90
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "smart_pipes:block/item_pipe_connection",
        "y": 270
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "smart_pipes:block/item_pipe_connection",
        "y": 180
      }
    },
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "smart_pipes:block/item_pipe_connection"
      }
    }
  ]

}